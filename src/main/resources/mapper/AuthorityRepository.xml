<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.withbuddy_project.repository.AuthorityRepository">

    <select id="findByName" resultType="com.example.withbuddy_project.domain.Authority">
        SELECT
            id "id",
            authorityName "authorityName"
        FROM Authority_db;
        WHERE authorityName = #{authorityName}
    </select>

    <select id="findByUser" resultType="com.example.withbuddy_project.domain.Authority">
        SELECT a.id "id", a.authorityName "authorityName"
        FROM Authority_db a, user_db u
        WHERE a.id = u.authorityId AND u.id = #{id}
    </select>

    <insert id="addAuthority">
        INSERT INTO  Authority_db
            (id,authorityName)
        VALUES(#{id}, #{authorityName})
    </insert>

</mapper>